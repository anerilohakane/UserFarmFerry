{
  "expo": {
    "name": "FarmFerry User",
    "slug": "farmferry-user",
    "version": "1.0.0",
    "runtimeVersion": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/OutlookLogo2.jpg",
    "scheme": "farmferry-user",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,

    "updates": {
      "url": "https://u.expo.dev/54c01b7e-6c33-4679-b0b3-7e7c2057fa7c"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.farmferry.user",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSSpeechRecognitionUsageDescription": "Allow FarmFerry to use speech recognition.",
        "NSMicrophoneUsageDescription": "Allow FarmFerry to use the microphone."
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/OutlookLogo2.jpg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.farmferry.user",
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAvbm16TuIFJry40jxiTXxWKt7qmfqKmgY"
        }
      }
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/OutlookLogo2.jpg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow FarmFerry to use your location."
        }
      ],
      "expo-speech-recognition"
    ],

    "extra": {
      "router": {},
      "eas": {
        "projectId": "84496c9d-5d22-4a10-a21d-d9b38c827568"
      }
    }
  }
}
